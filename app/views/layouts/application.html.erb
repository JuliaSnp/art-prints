<!DOCTYPE html>
<html>
<head>
<title>ArtPrints</title>
<%= stylesheet_link_tag "application", media: "all",
"data-turbolinks-track" => 'reload' %>
<%= javascript_include_tag "application", "data-turbolinks-track" => 'reload' %>
<%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
<div id="banner">
    
    
      <%= image_tag 'logo.png', alt: 'ArtPrints' %>
      





<%= form_tag(search_results_path, :method => "get", id: "user-search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "title, artist, category etc" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>





<span class="title"><%= @page_title %></span>


</div>
<div id="columns">
<div id="side">
<div id="cart">
<% if @cart %>
<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>

<%= render @cart %>
 <% end %>
 <% end %>
</div>
<ul>
<li><%=link_to 'Home', store_index_url %></li>
<br>


<li><%=link_to 'Contact', static_pages_contact_url %></li>

<br>
<li><%=link_to 'Terms and Conditions', static_pages_terms_and_conditions_url %></li>

<br>
<li><%= render 'devise/menu/registration_items' %></li>
<li><%= render 'devise/menu/login_items' %></li>

</ul> 


</ul>

<!-- this will make the products, orders and users accessible-->
<li><%=link_to 'Admin Login', admin_path %></li>
<li><%=link_to 'Orders', orders_path %></li>
<li><%=link_to 'Products', products_path %></li>
<li><%=link_to 'Users', users_path %></li>


<% if session[:user_id] %>
<ul>

 
<li><%=link_to 'Orders', orders_path %></li>
<li><%=link_to 'Products', products_path %></li>
<li><%=link_to 'Users', users_path %></li>
<br>

</ul> 
</div>
</nav>

<% end %>
</div>

<div id="main">
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= yield %>
</div>
</div>
</body>
</html>